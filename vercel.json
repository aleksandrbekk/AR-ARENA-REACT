{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/subscription-reminder",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/subscription-cleanup",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/giveaway-auto-run",
      "schedule": "*/5 * * * *"
    }
  ]
}
